{
  "title": "Right option Hyper (cmd+ctrl+option+shift)",
  "rules": [
    {
      "manipulators": [
        {
          "description": "Change right option to Hyper (i.e., command+control+option+shift)",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_control", "left_option", "left_command"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}

{
  "title": "Hyper Quick Launcher",
  "rules": [
    {
      "description": "H-a: kitty",
      "manipulators": [
        {
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_option",
                "left_command",
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "shell_command": "osascript ~/.dotfiles/scripts/kitty_new_window.scpt"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
